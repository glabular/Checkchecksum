<UserControl
    x:Class="ChecksumCalculatorWpf.Views.Windows.ChecksumsView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ChecksumCalculatorWpf.Views.Windows"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="470"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <Grid Margin="5">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="280" />
            <ColumnDefinition Width="320" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="150" />
            <RowDefinition Height="30" />
            <RowDefinition />
        </Grid.RowDefinitions>

        <TextBlock
            Grid.Row="1"
            Grid.Column="0"
            Grid.ColumnSpan="3"
            Margin="8,0,0,0"
            Padding="2"
            Text="{Binding FileName}" />

        <Button
            Grid.Row="0"
            Grid.Column="2"
            Width="123"
            Margin="0,0,10,10"
            Padding="4"
            HorizontalAlignment="Right"
            VerticalAlignment="Bottom"
            Command="{Binding CopyAllCommand}"
            Content="{DynamicResource CopyAllButton}" />

        <Button
            Grid.Row="0"
            Grid.Column="2"
            Margin="10"
            Padding="4"
            HorizontalAlignment="Right"
            VerticalAlignment="Top"
            Command="{Binding NavigateSettingsCommand}"
            IsEnabled="{Binding AllowDrop}"
            Content="{DynamicResource SettingsButton}" />

        <CheckBox
            Grid.Row="0"
            Grid.Column="1"
            Margin="16,0,40,7"
            VerticalAlignment="Bottom"
            Content="{DynamicResource LowercaseCheckbox}"
            IsChecked="{Binding IsLowercaseChecked, Mode=TwoWay}" />

        <Border
            Width="270"
            Height="120"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            AllowDrop="{Binding AllowDrop}"
            Background="#d4d8ff"
            BorderBrush="Gray"
            BorderThickness="2"
            CornerRadius="15"
            Drop="OnFileDrop">
            <TextBlock Text="{DynamicResource DropFileText}"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                FontSize="18">
            </TextBlock>
        </Border>

        <GroupBox
            x:Name="CheckboxGroupbox"
            Grid.Column="1"
            Margin="0,0,0,40"
            FontSize="12"
            Header="Algorithms">

            <Grid Margin="10,10,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="100" />
                    <ColumnDefinition Width="100" />
                    <ColumnDefinition Width="100" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                </Grid.RowDefinitions>

                <CheckBox
                    Grid.Row="0"
                    Grid.Column="0"
                    Content="SHA-256"
                    IsChecked="{Binding SHA256Checked, Mode=TwoWay}" />
                <CheckBox
                    Grid.Row="1"
                    Grid.Column="0"
                    Content="SHA-384"
                    IsChecked="{Binding SHA384Checked, Mode=TwoWay}" />
                <CheckBox
                    Grid.Row="2"
                    Grid.Column="0"
                    Content="SHA-512"
                    IsChecked="{Binding SHA512Checked, Mode=TwoWay}" />

                <CheckBox
                    Grid.Row="0"
                    Grid.Column="2"
                    Content="SHA-1"
                    IsChecked="{Binding SHA1Checked, Mode=TwoWay}" />
                <CheckBox
                    Grid.Row="1"
                    Grid.Column="2"
                    Content="MD5"
                    IsChecked="{Binding MD5Checked, Mode=TwoWay}" />

                <CheckBox
                    Grid.Row="0"
                    Grid.Column="1"
                    Content="SHA3-256"
                    IsChecked="{Binding SHA3_256Checked, Mode=TwoWay}" />

                <CheckBox
                    Grid.Row="1"
                    Grid.Column="1"
                    Content="SHA3-384"
                    IsChecked="{Binding SHA3_384Checked, Mode=TwoWay}" />

                <CheckBox
                    Grid.Row="2"
                    Grid.Column="1"
                    Content="SHA3-512"
                    IsChecked="{Binding SHA3_512Checked, Mode=TwoWay}" />

                <!--  "Select All" Checkbox  -->
                <CheckBox
                    Grid.Row="2"
                    Grid.Column="2"
                    Content="{DynamicResource SelectAllCheckbox}"
                    IsChecked="{Binding SelectAllChecked, Mode=TwoWay}" />
            </Grid>
        </GroupBox>

        <Border
            Grid.Row="2"
            Grid.Column="0"
            Grid.ColumnSpan="3"
            BorderBrush="LightGray"
            BorderThickness="1"
            CornerRadius="10">
            <Grid Margin="10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <!--  SHA-256  -->
                <TextBlock
                    Grid.Row="0"
                    Grid.Column="0"
                    Margin="0,0,10,5"
                    VerticalAlignment="Center"
                    Text="SHA-256" />
                <TextBox
                    Grid.Row="0"
                    Grid.Column="1"
                    Height="26"
                    Margin="0,0,0,5"
                    FontSize="16"
                    IsReadOnly="True"
                    Text="{Binding Sha256, UpdateSourceTrigger=PropertyChanged}" />
                <ProgressBar
                    Grid.Row="0"
                    Grid.Column="1"
                    Height="26"
                    Margin="0,0,0,5"
                    Maximum="100"
                    Minimum="0"
                    Value="{Binding Sha256Progress, UpdateSourceTrigger=PropertyChanged}">
                    <ProgressBar.Style>
                        <Style TargetType="ProgressBar">
                            <Setter Property="Visibility" Value="Collapsed" />
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsCalculatingSha256}" Value="True">
                                    <Setter Property="Visibility" Value="Visible" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </ProgressBar.Style>
                </ProgressBar>

                <Button
                    Grid.Row="0"
                    Grid.Column="2"
                    Width="50"
                    Margin="0,0,0,5"
                    Command="{Binding CopySha256Command}"
                    Content="{DynamicResource CopyButton}" />

                <!--  SHA-384  -->
                <TextBlock
                    Grid.Row="1"
                    Grid.Column="0"
                    Margin="0,0,10,5"
                    VerticalAlignment="Center"
                    Text="SHA-384" />
                <TextBox
                    Grid.Row="1"
                    Grid.Column="1"
                    Height="26"
                    Margin="0,0,0,5"
                    FontSize="16"
                    IsReadOnly="True"
                    Text="{Binding Sha384, UpdateSourceTrigger=PropertyChanged}" />
                <ProgressBar
                    Grid.Row="1"
                    Grid.Column="1"
                    Height="26"
                    Margin="0,0,0,5"
                    Maximum="100"
                    Minimum="0"
                    Value="{Binding Sha384Progress, UpdateSourceTrigger=PropertyChanged}">
                    <ProgressBar.Style>
                        <Style TargetType="ProgressBar">
                            <Setter Property="Visibility" Value="Collapsed" />
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsCalculatingSha384}" Value="True">
                                    <Setter Property="Visibility" Value="Visible" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </ProgressBar.Style>
                </ProgressBar>
                <Button
                    Grid.Row="1"
                    Grid.Column="2"
                    Width="50"
                    Margin="0,0,0,5"
                    Command="{Binding CopySha384Command}"
                    Content="{DynamicResource CopyButton}" />

                <!--  SHA-512  -->
                <TextBlock
                    Grid.Row="2"
                    Grid.Column="0"
                    Margin="0,0,10,5"
                    VerticalAlignment="Center"
                    Text="SHA-512" />
                <TextBox
                    Grid.Row="2"
                    Grid.Column="1"
                    Height="26"
                    Margin="0,0,0,5"
                    FontSize="16"
                    IsReadOnly="True"
                    Text="{Binding Sha512, UpdateSourceTrigger=PropertyChanged}" />
                <ProgressBar
                    Grid.Row="2"
                    Grid.Column="1"
                    Height="26"
                    Margin="0,0,0,5"
                    Maximum="100"
                    Minimum="0"
                    Value="{Binding Sha512Progress, UpdateSourceTrigger=PropertyChanged}">
                    <ProgressBar.Style>
                        <Style TargetType="ProgressBar">
                            <Setter Property="Visibility" Value="Collapsed" />
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsCalculatingSha512}" Value="True">
                                    <Setter Property="Visibility" Value="Visible" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </ProgressBar.Style>
                </ProgressBar>
                <Button
                    Grid.Row="2"
                    Grid.Column="2"
                    Width="50"
                    Margin="0,0,0,5"
                    Command="{Binding CopySha512Command}"
                    Content="{DynamicResource CopyButton}" />

                <!--  SHA3 256  -->
                <TextBlock
                    Grid.Row="3"
                    Grid.Column="0"
                    Margin="0,0,10,5"
                    VerticalAlignment="Center"
                    Text="SHA3-256" />
                <TextBox
                    Grid.Row="3"
                    Grid.Column="1"
                    Height="26"
                    Margin="0,0,0,5"
                    FontSize="16"
                    IsReadOnly="True"
                    Text="{Binding Sha3_256, UpdateSourceTrigger=PropertyChanged}" />
                <ProgressBar
                    Grid.Row="3"
                    Grid.Column="1"
                    Height="26"
                    Margin="0,0,0,5"
                    Maximum="100"
                    Minimum="0"
                    Value="{Binding Sha3_256Progress, UpdateSourceTrigger=PropertyChanged}">
                    <ProgressBar.Style>
                        <Style TargetType="ProgressBar">
                            <Setter Property="Visibility" Value="Collapsed" />
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsCalculatingSha3_256}" Value="True">
                                    <Setter Property="Visibility" Value="Visible" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </ProgressBar.Style>
                </ProgressBar>
                <Button
                    Grid.Row="3"
                    Grid.Column="2"
                    Width="50"
                    Margin="0,0,0,5"
                    Command="{Binding CopySha3_256Command}"
                    Content="{DynamicResource CopyButton}" />

                <!--  SHA3 384  -->
                <TextBlock
                    Grid.Row="4"
                    Grid.Column="0"
                    Margin="0,0,10,5"
                    VerticalAlignment="Center"
                    Text="SHA3-384" />
                <TextBox
                    Grid.Row="4"
                    Grid.Column="1"
                    Height="26"
                    Margin="0,0,0,5"
                    FontSize="16"
                    IsReadOnly="True"
                    Text="{Binding Sha3_384, UpdateSourceTrigger=PropertyChanged}" />
                <ProgressBar
                    Grid.Row="4"
                    Grid.Column="1"
                    Height="26"
                    Margin="0,0,0,5"
                    Maximum="100"
                    Minimum="0"
                    Value="{Binding Sha3_384Progress, UpdateSourceTrigger=PropertyChanged}">
                    <ProgressBar.Style>
                        <Style TargetType="ProgressBar">
                            <Setter Property="Visibility" Value="Collapsed" />
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsCalculatingSha3_384}" Value="True">
                                    <Setter Property="Visibility" Value="Visible" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </ProgressBar.Style>
                </ProgressBar>
                <Button
                    Grid.Row="4"
                    Grid.Column="2"
                    Width="50"
                    Margin="0,0,0,5"
                    Command="{Binding CopySha3_384Command}"
                    Content="{DynamicResource CopyButton}" />

                <!--  SHA3-512  -->
                <TextBlock
                    Grid.Row="5"
                    Grid.Column="0"
                    Margin="0,0,10,5"
                    VerticalAlignment="Center"
                    Text="SHA3-512" />
                <TextBox
                    Grid.Row="5"
                    Grid.Column="1"
                    Height="26"
                    Margin="0,0,0,5"
                    FontSize="16"
                    IsReadOnly="True"
                    Text="{Binding Sha3_512, UpdateSourceTrigger=PropertyChanged}" />
                <ProgressBar
                    Grid.Row="5"
                    Grid.Column="1"
                    Height="26"
                    Margin="0,0,0,5"
                    Maximum="100"
                    Minimum="0"
                    Value="{Binding Sha3_512Progress, UpdateSourceTrigger=PropertyChanged}">
                    <ProgressBar.Style>
                        <Style TargetType="ProgressBar">
                            <Setter Property="Visibility" Value="Collapsed" />
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsCalculatingSha3_512}" Value="True">
                                    <Setter Property="Visibility" Value="Visible" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </ProgressBar.Style>
                </ProgressBar>
                <Button
                    Grid.Row="5"
                    Grid.Column="2"
                    Width="50"
                    Margin="0,0,0,5"
                    Command="{Binding CopySha3_512Command}"
                    Content="{DynamicResource CopyButton}" />

                <!--  SHA-1  -->
                <TextBlock
                    Grid.Row="6"
                    Grid.Column="0"
                    Margin="0,0,10,5"
                    VerticalAlignment="Center"
                    Text="SHA-1" />
                <TextBox
                    Grid.Row="6"
                    Grid.Column="1"
                    Height="26"
                    Margin="0,0,0,5"
                    FontSize="16"
                    IsReadOnly="True"
                    Text="{Binding Sha1, UpdateSourceTrigger=PropertyChanged}" />
                <ProgressBar
                    Grid.Row="6"
                    Grid.Column="1"
                    Height="26"
                    Margin="0,0,0,5"
                    Maximum="100"
                    Minimum="0"
                    Value="{Binding Sha1Progress, UpdateSourceTrigger=PropertyChanged}">
                    <ProgressBar.Style>
                        <Style TargetType="ProgressBar">
                            <Setter Property="Visibility" Value="Collapsed" />
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsCalculatingSha1}" Value="True">
                                    <Setter Property="Visibility" Value="Visible" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </ProgressBar.Style>
                </ProgressBar>
                <Button
                    Grid.Row="6"
                    Grid.Column="2"
                    Width="50"
                    Margin="0,0,0,5"
                    Command="{Binding CopySha1Command}"
                    Content="{DynamicResource CopyButton}" />

                <!--  MD5  -->
                <TextBlock
                    Grid.Row="7"
                    Grid.Column="0"
                    Margin="0,0,10,5"
                    VerticalAlignment="Center"
                    Text="MD5" />
                <TextBox
                    Grid.Row="7"
                    Grid.Column="1"
                    Height="26"
                    Margin="0,0,0,5"
                    FontSize="16"
                    IsReadOnly="True"
                    Text="{Binding Md5, UpdateSourceTrigger=PropertyChanged}" />
                <ProgressBar
                    Grid.Row="7"
                    Grid.Column="1"
                    Height="26"
                    Margin="0,0,0,5"
                    Maximum="100"
                    Minimum="0"
                    Value="{Binding Md5Progress, UpdateSourceTrigger=PropertyChanged}">
                    <ProgressBar.Style>
                        <Style TargetType="ProgressBar">
                            <Setter Property="Visibility" Value="Collapsed" />
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsCalculatingMd5}" Value="True">
                                    <Setter Property="Visibility" Value="Visible" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </ProgressBar.Style>
                </ProgressBar>
                <Button
                    Grid.Row="7"
                    Grid.Column="2"
                    Width="50"
                    Margin="0,0,0,5"
                    Command="{Binding CopyMd5Command}"
                    Content="{DynamicResource CopyButton}" />
            </Grid>
        </Border>


    </Grid>
</UserControl>
